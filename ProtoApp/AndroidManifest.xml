<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.projectsrk.protoapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.projectsrk.protoapp.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.projectsrk.protoapp.SeriesActivity" />
        <activity android:name="org.projectsrk.protoapp.EpisodeActivity" >
        </activity>
        <activity android:name="org.projectsrk.protoapp.SceneActivity" >
        </activity>
        <activity android:name="org.projectsrk.protoapp.CastMemberActivity" >
        </activity>
        <activity android:name="org.projectsrk.protoapp.ClothesActivity" >
        </activity>
        <activity android:name="org.projectsrk.protoapp.SimilarClothesActivity" >
        </activity>
        <activity android:name="org.projectsrk.protoapp.GaeTestSeriesActivity" >
        </activity>
        <activity
            android:name="org.projectsrk.protoapp.MenuItemListActivity"
            android:label="@string/title_menuitem_list" >
        </activity>
        <activity
            android:name="org.projectsrk.protoapp.MenuItemDetailActivity"
            android:label="@string/title_menuitem_detail"
            android:parentActivityName=".MenuItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MenuItemListActivity" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

</manifest>